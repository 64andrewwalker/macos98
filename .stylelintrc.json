{
  "$schema": "https://json.schemastore.org/stylelintrc",
  "extends": "stylelint-config-standard-scss",
  "plugins": ["stylelint-scss"],
  "rules": {
    "comment-no-empty": true,
    "color-named": "never",
    "color-no-hex": [
      true,
      {
        "message": "❌ Literal hex colors are forbidden in component files. Use design tokens from _tokens.scss instead (e.g., tokens.$color-border-dark)."
      }
    ],
    "selector-class-pattern": null,
    "scss/dollar-variable-pattern": null,
    "scss/at-mixin-pattern": null,
    "scss/percent-placeholder-pattern": null,
    "scss/at-extend-no-missing-placeholder": null,
    "at-rule-empty-line-before": [
      "always",
      {
        "except": ["blockless-after-same-name-blockless", "first-nested"],
        "ignore": ["after-comment"],
        "ignoreAtRules": ["else", "if"]
      }
    ],
    "declaration-empty-line-before": null,
    "color-function-notation": "legacy",
    "alpha-value-notation": "number",
    "color-hex-length": "short",
    "font-family-name-quotes": "always-unless-keyword",
    "function-url-quotes": "always",
    "no-descending-specificity": null,
    "declaration-block-no-redundant-longhand-properties": true,
    "length-zero-no-unit": true,
    "property-no-deprecated": [
      true,
      {
        "message": "⚠️  Deprecated property detected. Please use the modern equivalent."
      }
    ],
    "declaration-property-value-keyword-no-deprecated": [
      true,
      {
        "message": "⚠️  Deprecated keyword detected. Please use the modern equivalent."
      }
    ]
  },
  "overrides": [
    {
      "files": ["src/styles/_tokens.scss", "src/styles/global.scss"],
      "rules": {
        "color-no-hex": null
      }
    }
  ],
  "ignoreFiles": [
    "node_modules/**/*",
    "dist/**/*",
    "build/**/*",
    "coverage/**/*"
  ]
}
